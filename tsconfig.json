{
	"compileOnSave": false,
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"sourceMap": true,
		"jsx": "react",
		"baseUrl": "./src",
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"experimentalDecorators": true,
		"strict": true,
		"lib": ["es2016", "dom"]
	},
	"include": [
		"./src/**/*",
		"./*"
	],
	"exclude": [
		"node_modules"
	]
}
